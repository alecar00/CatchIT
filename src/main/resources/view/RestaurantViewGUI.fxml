<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alessandro.caracciolo.catchit.controller.ProcessOrderController">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #2a2a2a; -fx-padding: 15 30;">
            <ImageView fitHeight="66.0" fitWidth="112.0" preserveRatio="true">
            <image>
               <Image url="@../Logo.png" />
            </image></ImageView>
            <Label text="Gestione Consegne" textFill="white">
                <font>
                    <Font name="System Bold" size="20" />
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS" />

            <!-- Menu buttons -->
            <Button style="-fx-background-color: transparent; -fx-text-fill: #64b5f6;" text="Logout" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Impostazioni" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Gestione Menu" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: white;" textFill="WHITE" />
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <HBox spacing="20" style="-fx-padding: 30;">

            <!-- Colonna Sinistra: Pronti per Assegnazione -->
            <VBox prefHeight="402.0" prefWidth="708.0" spacing="15" style="-fx-background-color: #2a2a2a;                   -fx-background-radius: 10; -fx-padding: 20;">
                <Label text="Pronti per Assegnazione" textFill="white">
                    <font>
                        <Font name="System Bold" size="16" />
                    </font>
                </Label>

                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                    <VBox fx:id="ordersContainer" spacing="15" style="-fx-background-color: #2a2a2a;">

                    </VBox>
                </ScrollPane>
            </VBox>
        </HBox>
    </center>

</BorderPane>
